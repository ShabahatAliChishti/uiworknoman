<script>
    //$('#dropDownId :selected').text();

    $(document).ready(function () {

        document.getElementById("PostCode").disabled = true;


        $("#SpecialistTypeId").change(function () {
            $.get("/Admin/GetMenuList", { SpecialistTypeId: $("#SpecialistTypeId").val() }, function (data) {
                $("#SubMenuId").empty();
                $.each(data, function (index, row) {
                    $("#SubMenuId").append("<option value='" + row.SubMenuId + "'>" + row.SubMenuName + "</option>")
                });
            });
        });



        $("#stateid").change(function () {
            $.get("/StandardUser/GetSubUrbs", { stateid: $('#stateid :selected').text() }, function (data) {
                console.log(data);
                $("#SuburbsId").empty();
                var s = '<option value="-1">--Select Suburbs--</option>';
                var v = data;
                console.log(v);
                for (var i = 0; i < v.length; i++) {
                    s += '<option value="' + data[i].Id + '">' + data[i].Suburbs + '</option>';
                }
                $("#SuburbsId").html(s);

                });

            });
    });


    $("#SuburbsId").change(function () {
        $.get("/StandardUser/GetPostCode", { SuburbsId: $('#SuburbsId :selected').text() }, function (data) {
            console.log(data);

            $("#PostCode").empty();
            //data = $.parseJSON(data);

            var PostCode = $("#PostCode").val();
            $("#PostCode").val(data.PostCode);


        });

    });




    $("#btnSubmit").click(function () {
        //sari fields krdena yhn
        //if ($("#Title").val() == "" && $("#SpecialistName").val() == "") {
        //    alert("Fields should not be empty");
        //    return false;
        //}


        //else {
        $("#loaderDiv").show();

        var myformdata = $("#myForm").serialize();

        $.ajax({

            type: "POST",
            url: "/StandardUser/GetJsonData",
            data: myformdata,
            success: function (json) {
                alert("success");

                var tr;
                //Append each row to html table
                for (var i = 0; i < json.length; i++) {
                    tr = $('<tr/>');
                    tr.append("<td>" + json[i].Title + "</td>");
                    tr.append("<td>" + json[i].SpecialistName + "</td>");
                    tr.append("<td>" + json[i].Surname + "</td>");
                    tr.append("<td>" + json[i].Address1 + "</td>");
                    tr.append("<td>" + json[i].MobileNo + "</td>");
                    tr.append("<td>" + json[i].PhoneNo + "</td>");
                    tr.append("<td>" + json[i].EmailAddress + "</td>");
                    tr.append("<td>" + json[i].State + "</td>");
                    if (json[i].TakingNewPatients == true) {
                        tr.append("<td>" + "<p>Yes</p>" + "</td>");
                    }
                    else
                    {
                        tr.append("<td>" + "<p>No</p>" + "</td>");

                    }
                    if (json[i].IsBooking == true) {
                        tr.append("<td>" + "<p>Yes</p>" + "</td>");
                    }
                    else {
                        tr.append("<td>" + "<p>No</p>" + "</td>");

                    }

                    tr.append("<td>" + json[i].Waiting_Time + "</td>");
                    tr.append("<td>" + json[i].price + "</td>");
                    tr.append("<td>" + json[i].Suburbs + "</td>");
                    @*tr.append("<td> onclick='window.location.href=\"https://www.google.com/maps/search/?api=1&query='@ViewBag.latitud ,@ViewBag.longitue'"+ "</td>");*@
                    $('<td>').append('<a href="https://www.google.com/maps/search/?api=1&query='@ViewBag.latitud ,@ViewBag.longitue'"'  </a> + "</td>"');






                    $('#myTable').append(tr);
                }

                $("#loaderDiv").hide();

            }

        })
    }

    );


</script>